{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git commit*)",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pre-commit-check.sh",
            "timeout": 5,
            "statusMessage": "Checking knowledge pitfalls..."
          }
        ]
      },
      {
        "matcher": "Bash(*git commit*)",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/commit-guard.sh",
            "timeout": 3,
            "statusMessage": "Validating commit flow..."
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-start-continuity.sh",
            "timeout": 10,
            "statusMessage": "Loading project context...",
            "once": true
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "auto|manual",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pre-compact.sh",
            "timeout": 10,
            "statusMessage": "Backing up transcript..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-summary.sh",
            "timeout": 15,
            "statusMessage": "Saving session summary..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Read|Edit|Write|Bash|Grep|Glob",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/tool-counter.sh",
            "timeout": 3,
            "async": true
          }
        ]
      },
      {
        "matcher": "Bash(git *)|Bash(gh *)",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/dev-workflow.sh",
            "timeout": 10,
            "statusMessage": "Checking dev workflow..."
          }
        ]
      },
      {
        "matcher": "TeamCreate",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/track-team.sh create",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "TeamDelete",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/track-team.sh delete",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Read|Edit|Write|Bash|Grep|Glob|WebSearch|WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/observe-batch.sh",
            "timeout": 20,
            "async": true
          }
        ]
      }
    ]
  }
}
