{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/tool-enforcer.sh",
            "timeout": 3,
            "statusMessage": "Validating tool usage..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/alias-conflict-detector.sh",
            "statusMessage": "Checking aliases..."
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/loop-detection.sh",
            "statusMessage": "Checking for loops..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/context-warning.sh",
            "timeout": 3,
            "statusMessage": "Checking context..."
          }
        ]
      }
    ]
  }
}
