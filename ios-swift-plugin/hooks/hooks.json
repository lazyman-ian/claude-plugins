{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/concurrency-guard.sh",
            "timeout": 30,
            "statusMessage": "Checking concurrency safety..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/swift-concurrency-check.sh",
            "timeout": 10,
            "statusMessage": "Scanning Swift concurrency..."
          }
        ]
      }
    ]
  }
}
